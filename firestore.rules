rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Versão permissiva para ambiente de desenvolvimento
    // ATENÇÃO: Estas regras são APENAS para desenvolvimento!
    // Em produção, use regras mais restritivas
    
    // Regra básica: permitir acesso completo para usuários autenticados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 